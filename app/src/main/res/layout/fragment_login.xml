<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sujin.opencomplaintss.LoginFragment">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username1"
        android:hint="Username"
        android:ems="10"
        android:layout_marginTop="81dp"
        android:typeface="monospace"
        android:maxLength="40"
        android:width="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Password"
        android:id="@+id/lpassword"
        android:layout_below="@+id/username1"
        android:maxLength="40"
        android:typeface="monospace"
        android:layout_alignStart="@+id/username1"
        android:width="300dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/loginButton"
        android:layout_below="@+id/radioGroup"
        android:background="#009688"
        android:textColor="#fbf9f9"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Us For Free"
        android:textSize="15sp"
        android:id="@+id/signuptext"
        android:layout_below="@+id/loginButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:weightSum="1"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/textView16"
        android:layout_alignStart="@+id/textView16"
        android:layout_alignEnd="@+id/lpassword">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="public"
            android:id="@+id/radioButton"
            android:checked="true"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gov"
            android:id="@+id/radioButton2"
            android:checked="false"

            />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Login as:"
        android:id="@+id/textView16"
        android:layout_below="@+id/lpassword"
        android:layout_alignStart="@+id/lpassword"
        android:layout_marginTop="10dp" />

</RelativeLayout>
